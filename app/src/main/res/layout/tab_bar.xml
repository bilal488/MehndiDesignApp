<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/greenbg"
    android:layout_marginTop="57dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/designFragmnt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Designs"
        android:textColor="@color/brightColor"
        android:textSize="20dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/PalmFragmnt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Palm"
        android:textColor="@color/lightColor"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/armsFragmnt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Arms"
        android:textColor="@color/lightColor"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/feetFragmnt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Feet"
        android:textColor="@color/lightColor"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/upperHandFragmnt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="UpperHand"
        android:textColor="@color/lightColor"
        android:textSize="20dp"
        android:textStyle="bold" />

</LinearLayout>